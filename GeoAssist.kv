#:import threading threading
<LanguageWindow>:
    GridLayout:
        cols:1
        GridLayout:
            cols:4
            row_default_height:70
            row_force_default:True

            Button:
                text: 'Language'
                background_normal: ''
                background_color: 1, .3, .4, .85
                on_release: root.manager.current = 'language'
            Button:
                text: 'Object'
                on_release:  root.manager.current = 'object'
            Button:
                text: 'Cheat Sheet'
                on_release: root.manager.current = 'cheatsheet'
            Button:
                text: 'About'
                on_release: root.manager.current = 'about'

        BoxLayout:
            Image:
                id: imgLang
                
        GridLayout:
            cols: 2
            row_default_height: 140
            row_force_default: True

            GridLayout:
                rows: 4
                cols: 2
                row_default_height:50
                row_force_default:True

                Label:
                    text: "Slavic"
                CheckBox:
                    id: chkSlavic
                
                Label:
                    text: "Nordic/Baltic"
                CheckBox:
                    id: chkNordicBaltic
                
                Label:
                    text: "South-East Asian"
                CheckBox:
                    id: chkSEA

                Button:
                    text: 'Submit'
                    on_release: 
                        threading.Thread(target=root.languageDetect, args=(chkSlavic.active, chkNordicBaltic.active, chkSEA.active)).start()

            Label:
                size: self.texture_size
                text: root.outputString

        
<ObjectWindow>:
    GridLayout:
        cols:1

        GridLayout:
            cols:4
            row_default_height:70
            row_force_default:True

            Button:
                text: 'Language'
                on_release: root.manager.current = 'language'
            Button:
                text: 'Object'
                background_normal: ''
                background_color: 1, .3, .4, .85
                on_release: root.manager.current = 'object'
            Button:
                text: 'Cheat Sheet'
                on_release: root.manager.current = 'cheatsheet'
            Button:
                text: 'About'
                on_release: root.manager.current = 'about'

        BoxLayout:
            Image:
                id: imgObj

        GridLayout:
            cols: 2
            row_default_height:200
            row_force_default:True

            GridLayout:
                rows: 2
                cols: 2

                Label:
                    text: "Bollard"
                CheckBox:
                    id: chkBollard
     
                Button:
                    text: 'Submit'
                    on_release: 
                        threading.Thread(target=root.objectDetect, args=(chkBollard.active)).start()

            Label:
                size: self.texture_size
                text: root.outputString

