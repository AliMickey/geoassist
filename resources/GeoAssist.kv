#:import threading threading
<LanguageWindow>:
    GridLayout:
        cols: 1
        BoxLayout:
            size: (1024,70)
            size_hint: (None, None)
            spacing: 5

            Button:
                text: 'Language'
                background_normal: ''
                background_color: 1, .3, .4, .85
                on_release: root.manager.current = 'language'
            Button:
                text: 'Object'
                on_release:  root.manager.current = 'object'
            Button:
                text: 'About'
                on_release: root.manager.current = 'about'

        BoxLayout:
            orientation: 'vertical'
            Image:
                id: imgLang
                size_hint: (1, .6)

            Button:
                text: 'Submit'
                on_release: 
                    threading.Thread(target=root.languageDetect).start()
                    outputLabel = ""
                size_hint: (.2, .2)
                pos_hint: {'right': .6}

        Label:
            id: outputLabel
            size: self.texture_size
            text: root.outputString
            size_hint: (2, .1)
            pos_hint: {'left': 1}
                
        
<ObjectWindow>:
    bollard: chkBollard
    GridLayout:
        cols: 1

        BoxLayout:
            size: (1024,70)
            size_hint: (None, None)
            spacing: 5

            Button:
                text: 'Language'
                on_release: root.manager.current = 'language'
            Button:
                text: 'Object'
                background_normal: ''
                background_color: 1, .3, .4, .85
                on_release: root.manager.current = 'object'
            Button:
                text: 'About'
                on_release: root.manager.current = 'about'

        BoxLayout:
            Image:
                id: imgObj

        GridLayout:
            cols: 2
            row_default_height:120
            row_force_default:True

            GridLayout:
                rows: 2
                cols: 2

                Label:
                    text: "Bollard"
                CheckBox:
                    id: chkBollard
     
                Button:
                    text: 'Submit'
                    on_release: 
                        threading.Thread(target=root.objectDetect).start()

            Label:
                size: self.texture_size
                text: root.outputString


<AboutWindow>:
    GridLayout:
        cols:1

        GridLayout:
            cols: 3
            row_default_height: 70
            row_force_default: True

            Button:
                text: 'Language'
                on_release: root.manager.current = 'language'
            Button:
                text: 'Object'
                on_release: root.manager.current = 'object'
            Button:
                text: 'About'
                background_normal: ''
                background_color: 1, .3, .4, .85
                on_release: root.manager.current = 'about'

    Label:
        markup: True
        text: "[size=15]Guarantee your victory royale!\nSource Code: github.com/AliMickey/geoassist[size=25]" 